<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs') %>
  <body class="d-flex flex-column full-height">
    <%- include('./partials/header.ejs') %>

    <main class="container flex-grow-1 py-4">
      <h2>Perfil de Usuario</h2>
      <form>
        <div class="form-group">
          <label for="nombre">Nombre</label>
          <input
            type="text"
            class="form-control"
            id="nombre"
            placeholder="Nombre"
            value="Silvia"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="apellido">Apellido</label>
          <input
            type="text"
            class="form-control"
            id="apellido"
            placeholder="Apellido"
            value="Ponce"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="usuarioRegistro">Usuario</label>
          <input
            type="text"
            class="form-control"
            id="usuarioRegistro"
            placeholder="Usuario"
            value="silviaponce2024"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="email">Correo Electrónico</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Correo Electrónico"
            value="silviaponce@gmail.com"
            readonly
          />
        </div>
        <button type="button" class="btn btn-primary" onclick="location.href='/users/edit'">Editar Perfil</button>
        <button type="button" class="btn btn-secondary" onclick="location.href='/'">Inicio</button>
      </form>
    </main>

    <%- include('./partials/footer.ejs') %>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
