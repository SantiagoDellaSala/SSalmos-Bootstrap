<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs') %>
  <body class="d-flex flex-column full-height">
    <%- include('./partials/header.ejs') %>

    <main class="container flex-grow-1 py-4">
      <h2>Carrito de Compras</h2>
      <form id="carritoForm" action="/eliminar-seleccionados" method="POST">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Seleccionar</th>
                <th scope="col">Imagen</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product => { %>
                <tr>
                  <td>
                    <input type="checkbox" name="eliminar[]" value="<%= product.id %>">
                  </td>
                  <td>
                    <img src="<%= product.mainImage %>" alt="<%= product.name %>" class="img-thumbnail" style="width: 100px; height: 100px;">
                  </td>
                  <td><%= product.name %></td>
                  <td>$<%= product.price %></td>
                  <td>
                    <input type="number" name="cantidad[]" value="1" class="form-control" style="width: 60px;">
                  </td>
                  <td>$<%= product.price * 1 %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-between mt-4">
          <button type="button" class="btn btn-primary" id="pagarBtn">Pagar</button>
          <button type="submit" class="btn btn-danger">Eliminar seleccionados</button>
          <button type="button" class="btn btn-secondary" onclick="location.href='/'">Volver al inicio</button>
        </div>
      </form>
    </main>

    <%- include('./partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      document.getElementById('pagarBtn').addEventListener('click', function() {
        Swal.fire({
          title: 'Gracias por su compra',
          confirmButtonText: 'OK'
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/';
          }
        });
      });
    </script>
  </body>
</html>