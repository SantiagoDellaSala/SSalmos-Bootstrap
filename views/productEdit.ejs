<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs') %>
  <body class="d-flex flex-column full-height">
    <%- include('./partials/header.ejs') %>

    <main class="container flex-grow-1 py-4">
      <h2>Editar Producto</h2>
      <form action="/products/update/<%= product.id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="nombreProducto">Nombre del Producto</label>
          <input
            type="text"
            class="form-control"
            id="nombreProducto"
            name="nombreProducto"
            value="<%= product.name %>"
          />
        </div>
        <div class="form-group">
          <label for="precioProducto">Precio del Producto</label>
          <input
            type="number"
            class="form-control"
            id="precioProducto"
            name="precioProducto"
            value="<%= product.price %>"
            step="100"
          />
        </div>
        <div class="form-group">
            <label for="stockProducto">Stock del Producto</label>
            <input
              type="number"
              class="form-control"
              id="stockProducto"
              name="stockProducto"
              value="<%= product.stock %>"
              step="1"
            />
        </div>
        <div class="form-group">
          <label>Im√°genes del Producto</label>
          <div class="d-flex justify-content-between">
            <div class="text-center m-1">
              <label for="imagenProducto1">
                <img src="/images/<%= product.mainImage %>" alt="img1" class="img-thumbnail" style="width: 100px; height: 100px;">
              </label>
              <input type="hidden" name="currentMainImage" value="<%= product.mainImage %>" />
              <input
                type="file"
                class="form-control-file"
                id="imagenProducto1"
                name="imagenProducto1"
                accept="image/*"
              />
            </div>
            <div class="text-center m-1">
              <label for="imagenProducto2">
                <img src="/images/<%= product.secondImage %>" alt="img2" class="img-thumbnail" style="width: 100px; height: 100px;">
              </label>
              <input type="hidden" name="currentSecondImage" value="<%= product.secondImage %>" />
              <input
                type="file"
                class="form-control-file"
                id="imagenProducto2"
                name="imagenProducto2"
                accept="image/*"
              />
            </div>
            <div class="text-center m-1">
              <label for="imagenProducto3">
                <img src="/images/<%= product.thirdImage %>" alt="img3" class="img-thumbnail" style="width: 100px; height: 100px;">
              </label>
              <input type="hidden" name="currentThirdImage" value="<%= product.thirdImage %>" />
              <input
                type="file"
                class="form-control-file"
                id="imagenProducto3"
                name="imagenProducto3"
                accept="image/*"
              />
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <button type="button" class="btn btn-secondary" onclick="location.href='/users/admin'">Volver</button>
      </form>
    </main>

    <%- include('./partials/footer.ejs') %>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>