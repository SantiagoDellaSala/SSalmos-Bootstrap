<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs') %>
  <body class="d-flex flex-column full-height">
    <%- include('./partials/header.ejs') %>

    <main class="container flex-grow-1 py-4">
      <h1 class="mb-4">Formulario de Envío</h1>

      <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="nombre">Nombre</label>
            <input
              type="text"
              class="form-control"
              id="nombre"
              placeholder="Ej: Juan"
            />
          </div>

          <div class="form-group col-md-6">
            <label for="segundoNombre">Segundo Nombre</label>

            <input
              type="text"
              class="form-control"
              id="segundoNombre"
              placeholder="Ej: Pablo"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="apellido">Apellido</label>
            <input
              type="text"
              class="form-control"
              id="apellido"
              placeholder="Ej: Fuentes"
            />
          </div>

          <div class="form-group col-md-6">
            <label for="documento">Número de Documento</label>

            <input
              type="text"
              class="form-control"
              id="documento"
              placeholder="Ej: 12.345.678"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="cuilCuit">CUIL/CUIT</label>
            <input
              type="text"
              class="form-control"
              id="cuilCuit"
              placeholder="Ej: 20-12345678-9"
            />
          </div>

          <div class="form-group col-md-6">
            <label for="telefono">Teléfono</label>
            <input
              type="text"
              class="form-control"
              id="telefono"
              placeholder="Ej: 9876-5432"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="celular">Celular</label>
            <input
              type="text"
              class="form-control"
              id="celular"
              placeholder="Ej: 15-1234-5678"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-8">
            <label for="calle">Calle</label>
            <input
              type="text"
              class="form-control"
              id="calle"
              placeholder="Ej: Av. Ejemplo"
            />
          </div>

          <div class="form-group col-md-2">
            <label for="numeroCalle">Número</label>
            <input
              type="text"
              class="form-control"
              id="numeroCalle"
              placeholder="Ej: 1234"
            />
          </div>

          <div class="form-group col-md-2">
            <label for="piso">Piso</label>
            <input
              type="text"
              class="form-control"
              id="piso"
              placeholder="Ej: 1"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="departamento">Departamento</label>

            <input
              type="text"
              class="form-control"
              id="departamento"
              placeholder="Ej: A-3"
            />
          </div>

          <div class="form-group col-md-6">
            <label for="referencias">Referencias</label>
            <input
              type="text"
              class="form-control"
              id="referencias"
              placeholder="Ej: Puerta blanca-Reja verde"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="barrio">Barrio</label>
            <input
              type="text"
              class="form-control"
              id="barrio"
              placeholder="Ej: Principal"
            />
          </div>

          <div class="form-group col-md-4">
            <label for="localidad">Localidad</label>
            <input
              type="text"
              class="form-control"
              id="localidad"
              placeholder="Ej: Secundario"
            />
          </div>

          <div class="form-group col-md-4">
            <label for="provincia">Provincia</label>
            <input
              type="text"
              class="form-control"
              id="provincia"
              placeholder="Ej: Buenos Aires"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="pais">País</label>
            <input
              type="text"
              class="form-control"
              id="pais"
              placeholder="Ej: Argentina"
            />
          </div>
        </div>

        <button type="submit" class="btn btn-success">Solicitar Envío</button>
      </form>
    </main>

    <%- include('./partials/footer.ejs') %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
